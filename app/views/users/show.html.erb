<div class="container col-md-12">
  <h1 class="text-center">
    <%= @user.name  %>
        </h1>
  <div class="row">
    <div class="col-md-3">
      <%= image_tag(@user.image_url, class: "profile") %>
    </div>
    <div class="col-md-6">
      <p><strong> <%= @user.job %> </strong>
      <br><br>
      <strong><%= @user.city %> </p></strong>
      <br> 
      <%=link_to @user.xing_profile, class: "btn btn-default btn-lg white_button" do %> 
        <%= image_tag('https://encrypted-tbn3.gstatic.com/images?q=tbn:ANd9GcQD1lCGSiROaXVJyx1h1CfkuZsiO80_RMyEo1GXCulFXQmUFDGi', width: 20) %> Xing-Profil ansehen
      <% end %>
      <br>
      <br>
      <%= link_to "#", class: "btn btn-default btn-lg white_button" do %>
        <span class="sglyphicon glyphicon-envelope" width: 50px></span> Per E-Mail anschreiben
      <% end %>
    </div>
    <div class="col-md-3">
    </div>
  </div>
</div>
