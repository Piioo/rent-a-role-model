      ContactForms COntroller
      def new @contact_form = ContactForm.new 
end 

def create 
	begin @contact_form = ContactForm.new(params[:contact_form]) 
	@contact_form.request = request 
	if @contact_form.deliver flash.now[:notice] = 'Thank you for your message!' 
	else 
		render :new 
	end 
	rescue ScriptError 
		flash[:error] = 'Sorry, this message appears to be spam and was not delivered.' 
		end 
	end 
end 


contact form model
 def initialize(params[:user_id] = {})
    @user = User
  end

  def params
    @params
  end